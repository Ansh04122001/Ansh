@model Ansh.Models.DTO.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        body {
            background-color: #343a40;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh; /* Ensure the body takes the full height of the viewport */
        }

        form {
            border: 1px solid;
            width: 60%;
            max-width: 300px; /* Set a maximum width for the form */
            margin: auto;
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            background-color: #aa048b;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

        .container {
            background-color: #fff;
            border-radius: 2px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            padding: 16px;
        }

        .msg {
            padding: 0px;
        }

        .err {
            color: red;
        }
    </style>
</head>
<body>

    <form asp-action="Login" method="post">
        <div class="container">
            <label asp-for="Username"><b>Username</b></label>
            <input type="text" asp-for="Username" placeholder="Enter Username">
            <div class="msg">
                <span class="err" asp-validation-for="Username"></span>
            </div>

            <label asp-for="Password"><b>Password</b></label>
            <input type="password" asp-for="Password" placeholder="Enter Password">
            <div class="msg">
                <span asp-validation-for="Password" class="err"></span>
            </div>

            @if (TempData["msg"] != null)
            {
                <div class="msg">@TempData["msg"]</div>
            }

            <button type="submit">Login</button>
            <a class="text-alert" href="/UserAuthentication/Registration">Register here</a>
        </div>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-eOJMYsdz7Dxj1qzxKTckVQx6opxUHL2zLRSYEM+7wsjIENk5KT7Txhca2QVrmhj" crossorigin="anonymous"></script>
</body>
</html>
