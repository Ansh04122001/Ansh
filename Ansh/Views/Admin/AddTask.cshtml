        </ul>

    </aside><!-- End Sidebar-->
<main id="main" class="main">

    <div class="pagetitle">
        <h1>Add Task</h1>
        <nav>
            <ol class="breadcrumb">

                 <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="Display">Home</a></li>
                <li class="breadcrumb-item">Task</li>
                 <li class="breadcrumb-item"><a asp-controller="Admin" asp-action="AddTask">AddTask</a></li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Add Task</h5>
                            <form asp-controller="Admin" asp-action="taskadd" method="post" class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Department Name</label>
                                <select class="form-select" name="DepartmentName" id="DepartmentName">
                                    <option value="">Select Department Name</option>
                                        @foreach (var department in Model.Departments)
                                        {
                                            <option value="@department.DepartmentName">@department.DepartmentName</option>
                                        }
                                </select>
                                <span class="text-danger">@Html.ValidationMessageFor(model => model.Dept.DepartmentName)</span>
                            </div>
                                <div class="col-6">
                                    <label class="form-label">Employee List</label>
                                    <select class="form-select" name="EmployeeList" id="EmployeeList">
                                        <option value="">Select Employee</option>
                                        @foreach (var employee in Model.Employee)
                                        {
                                            <option value="@employee.EmployeeName">@employee.EmployeeName</option>
                                        }
                                    </select>
                                    <span class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label class="form-label">Project Name </label>
                                    <select class="form-select" name="ProjectName" id="ProjectName">
                                        <option value="">Select Project</option>
                                        @foreach (var Project in Model.Project)
                                        {
                                            <option value="@Project.ProjectName">@Project.ProjectName</option>
                                        }
                                    </select>
                                    <span class="text-danger"></span>
                                </div>

                            <div class="col-6">
                                <label class="form-label">Task Priority</label>
                                <select class="form-select" name="TaskPriority">
                                    <option value="">Select Priority</option>
                                    <option value="low">Low</option>
                                    <option value="medium">Medium</option>
                                    <option value="high">High</option>
                                    <option value="urgent">Urgent</option>
                                </select>
                                <span class="text-danger"></span>
                            </div>

                            <!-- Task Title -->
                            <div class="col-6">
                                <label class="form-label">Task Title</label>
                                <input class="form-control" name="TaskTitle" />
                                <span class="text-danger"></span>
                            </div>

                            <!-- Task Description -->
                            <div class="col-6">
                                <label class="form-label">Task Description</label>
                                <textarea class="form-control" name="TaskDescription"></textarea>
                                <span class="text-danger"></span>
                            </div>
                         

                            <!-- Task End Date -->
                            <div class="col-6">
                                <label class="form-label">Task End Date</label>
                                <input type="date" class="form-control" name="TaskEndDate" />
                                <span class="text-danger"></span>
                            </div>
                                <!-- Task End Date -->
                                <div class="col-6">
                                    <label class="form-label">Task Assign Date</label>
                                    <input type="date" class="form-control" name="TaskAassignDate" />
                                    <span class="text-danger"></span>
                                </div>
                                <!-- Status -->
                                <div class="col-6">
                                    <label class="form-label">Status</label>
                                    <select class="form-select" name="TaskStatus">
                                        <option value="0">Not Done</option>
                                        <option value="1">Done</option>
                                    </select>
                                    <span class="text-danger"></span>
                                </div>


                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </form><!-- Vertical Form -->

                    </div>
                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->


<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <script>
        document.getElementById('DepartmentName').addEventListener('change', function () {
            var departmentName = this.value;
            var employeeListDropdown = document.getElementById('EmployeeList');
            employeeListDropdown.innerHTML = '<option value="">Select Employee</option>';
            if (departmentName) {
                // Fetch employees based on the selected department
                fetch('/Admin/GetEmployees?departmentName=' + departmentName)
                    .then(response => response.json())
                    .then(data => {
                        console.log(data); // Add this line to check the data
                        data.forEach(employee => {
                            var option = new Option(employee.employeeName || "", employee.employeeId);
                            employeeListDropdown.add(option);
                        });
                    })
                    .catch(error => console.error('Error fetching employees:', error));
            }
        });
    </script>

</body>
</html>