 <script>
        $(document).ready(function () {
            $('#employeeTable').DataTable();
        });
        function getEmp(id) {
            $.ajax({
                url: "/Admin/GetEmp/" + id,
                type: "GET",
                success: function (data) {
                    // Populate the form fields
                   
                    $("#Employees_DepartmentName").val(data.departmentName);
                    $("#Employees_EmployeeName").val(data.employeeName);
                    $("#Employees_EmployeeEmail").val(data.employeeEmail);
                    $("#Employees_EmployeeContact").val(data.employeeContact);
                    $("#Employees_EmployeeDesignation").val(data.employeeDesignation);
                    $("#Employees_EmployeeDOJ").val(data.employeeDOJ);
                    $("#Employees_EmployeeAddress").val(data.employeeAddress);
                    $("#Employees_Description").val(data.description);
                    $("#Employees_Password").val(data.password);
                    $("#employeePhotoPreview").attr("src", data.employeeProfileFile);
                    // Add the EmployeeId to the form data
                    $("#editModal form").append('<input type="hidden" name="Employees.EmployeeId" value="' + data.employeeId + '">');
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }
        $('#confirmDelete').on('click', function () {
            var idToDelete = $("#employeeId").text();
            empDelete(idToDelete);
        });
        function empDelete(id) {
            $.ajax({
                url: "/Admin/EmpDelete/" + id,
                type: "POST",
                success: function (data) {
                    if (data.success) {

                        location.reload();
                    } else {

                    }
                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }
        function previewEmployeePhoto() {
            var input = document.getElementById('employeeProfileFile');
            var preview = document.getElementById('employeePhotoPreview');

            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    preview.src = e.target.result;
                };

                reader.readAsDataURL(input.files[0]);
            } else {
                preview.src = ""; 
            }
        }
        function showEmployeeDetails(id) {
            $.ajax({
                url: "/Admin/Photo/" + id,
                dataType: 'json',
                success: function (data) {
                    $("#employeeId").text(data.employeeId);
                    $("#employeeName").text(data.employeeName);
                    $("#employeeEmail").text(data.employeeEmail);
                    $("#employeeContact").text(data.employeeContact);
                    $("#employeeDesignation").text(data.employeeDesignation);
                    $("#employeeDOJ").text(data.employeeDOJ);
                    $("#employeeAddress").text(data.employeeAddress);
                    $("#employeeDescription").text(data.description);
                    $("#employeeDepartment").text(data.departmentName);
                    $("#employeePassword").text(data.password);
                    
                },
                error: function () {
                }
            });
        }
        $(document).ready(function () {
            $('.viewDetailsBtn').click(function () {
                var employeeId = $(this).data('employeeid');
                showEmployeeDetails(employeeId);
            });
        });


    </script>

