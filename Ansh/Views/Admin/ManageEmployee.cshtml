                                        <input asp-for="Employees.EmployeeContact" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Employees.EmployeeDesignation" class="form-label">Employee Designation</label>
                                        <input asp-for="Employees.EmployeeDesignation" class="form-control"/>
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Employees.EmployeeDOJ" class="form-label">Employee Date Of Joining</label>
                                        <input asp-for="Employees.EmployeeDOJ" type="datetime" class="form-control" />
                                    </div>
                                    <div class="col-md-6">
                                        <label asp-for="Employees.EmployeeAddress" class="form-label">Employee Address</label>
                                        <input asp-for="Employees.EmployeeAddress" class="form-control"  />
                                    </div>
