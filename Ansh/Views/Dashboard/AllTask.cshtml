    <!-- DataTables JS script -->
    <script>
        $(document).ready(function () {
            $('#taskTable').DataTable({
                ajax: {
                    url: '/Dashboard/TaskDispaly',
                    dataSrc: ''
                },
                columns: [
                    { data: 'projectName' },
                    { data: 'taskTitle' },
                    { data: 'departmentName' },
                    {
                        data: 'taskAassignDate',
                        render: function (data) {
                            console.log('Original taskAssignDate:', data);
                            var formattedDate = formatDate(data);
                            console.log('Formatted taskAssignDate:', formattedDate);
                            return formattedDate;
                        }
                    },
                    {
                        data: 'taskEndDate',
                        render: function (data) {
                            console.log('Original taskEndDate:', data);
                            var formattedDate = formatDate(data);
                            console.log('Formatted taskEndDate:', formattedDate);
                            return formattedDate;
                        }
                    },
                    { data: 'taskDescription' },
                    { data: 'taskPriority' },
                    {
                        data: 'taskStatus',
                        render: function (data) {
                            return thumbStatus(data);
                        }
                    },
                    {
                        data: null,
                        render: function (data, type, row) {
                            return '<div class="dropdown d-flex justify-content-center">' +
                                '<button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions</button>' +
                                '<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">' +
                                '<button type="button"  class="btn" data-toggle="modal" data-target="#editModal" onclick="getTaskDetails(' + row.id + ')"><i class="bi bi-pencil">Edit</i></button> ' +
                                '</div>' +
                                '</div>';

                        }
                    }

                ]
            });
        });
        function getTaskDetails(id) {
            $.ajax({
                url: "/Dashboard/GetTaskDetails/" + id,
                type: "GET",
                success: function (data) {
                    console.log("Received data:", data);
                    $("#Tasks_Id").val(data.id);
                    $("#Tasks_DepartmentName").val(data.departmentName);
                    $("#Tasks_EmployeeList").val(data.employeeList);
                    $("#Tasks_ProjectName").val(data.projectName);
                    $("#Tasks_TaskPriority").val(data.taskPriority);
                    $("#Tasks_TaskTitle").val(data.taskTitle);
                    $("#Tasks_TaskDescription").val(data.taskDescription);
                    $("#Tasks_TaskEndDate").val(data.taskEndDate);
                    $("#Tasks_TaskAassignDate").val(data.taskAassignDate);
                    $("#Tasks_TaskStatus").val(data.taskStatus);

                },
                error: function (xhr, status, error) {
                    console.error(error);
                }
            });
        }

        function thumbStatus(data) {
            var status = parseInt(data); // Convert data to an integer

            if (status === 1) {
                return '<span style="color: green;">Completed</span>';
            } else if (status === 0) {
                return '<span style="color: red;">Pending</span>';
            } else {
                return 'Unknown'; // Or any default value you prefer
            }
        }
        function formatDate(dateString) {
            var date = new Date(dateString);
            console.log('Parsed date object:', date);
            if (isNaN(date.getTime())) {
                return 'Invalid Date';
            }

            var day = date.getDate();
            var month = date.getMonth() + 1;
            var year = date.getFullYear();

            // Pad with leading zeros if needed
            day = day < 10 ? '0' + day : day;
            month = month < 10 ? '0' + month : month;

            return day + '-' + month + '-' + year;
        }
    </script>


